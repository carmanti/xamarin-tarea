<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.Login">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            <Label Text="SEMANA DOS MOVILES!" FontSize="18" TextColor="Blue" HorizontalTextAlignment="Center"
                />
            <Entry x:Name="txtDatoUno" Placeholder="Ingresa el dato 1 " Keyboard="Numeric"/>
            <Entry x:Name="txtDatoDos" Placeholder="Ingresa el dato 2 " Keyboard="Numeric"/>
            <Entry x:Name="txtDatoTres" Placeholder="Ingresa el dato 3 " Keyboard="Numeric"/>
            <Entry x:Name="txtResultado" Placeholder="RESULTADO " IsReadOnly="True" Keyboard="Numeric"/>
             <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked"></Button>
             
            
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
